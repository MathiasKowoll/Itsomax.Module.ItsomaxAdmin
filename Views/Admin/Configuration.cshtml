@using Itsomax.Module.Core.Services
@using Itsomax.Module.ItsomaxAdmin.ViewModels
@model SetSystemInfoViewModel
@inject GetSettings GetSettings
<div class="container-fluid">
    <br />
    <div class="row">
        <div class="col-lg-12">
            <div class="card card-outline-info">
                <div class="card-header bg-theme">
                    <h2 class="m-b-0 text-white">System configuration for @GetSettings.SystemTitle()</h2>
                </div>
                <div class="card-body">
                    <form autocomplete="off" class="form-horizontal p-t-20" asp-controller="Admin" asp-action="ConfigurationPost" method="post">
                        @foreach (var item in @Model.AppSettings)
                        {
                            <div class="form-group row">
                                <label class="col-sm-3 text-right">@item.KeyName</label>
                                <div class="col-sm-9">
                                    <div class="input-group" lang="en-US">
                                        <input name="key" type="hidden" class="form-control" value="@item.Key">
                                        <input name="value" type="text" class="form-control" value="@item.Value" />
                                    </div>

                                </div>
                            </div>
                        }
                        <div class="form-group row">
                            <label class="col-sm-2 control-label"></label>
                            <div class="col-sm-4">
                                <button type="submit" class="btn btn-info waves-effect waves-light"><i class="fa fa-check"></i> Save</button>
                                <a asp-controller="Admin" asp-action="Index" class="btn btn-info waves-effect waves-light">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>